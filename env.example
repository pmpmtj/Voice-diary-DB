# ============================================================================
# PIPED GOOGLE DRIVE TRANSCRIPTION PIPELINE - CONFIGURATION
# ============================================================================
# This file contains all configuration variables for the entire pipeline.
# Copy this file to .env and customize the values for your environment.
#
# Configuration Priority:
# 1. Environment variables (highest priority)
# 2. .env file (this file)
# 3. Hardcoded defaults (lowest priority)
# ============================================================================

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================
# Download directory for files from Google Drive (must be absolute path)
# Windows example: C:\Users\username\Downloads
# Linux/macOS example: /home/username/downloads
DOWNLOAD_DIR=C:\Users\pmpmt\Scripts_Cursor\downloads

# ============================================================================
# GOOGLE DRIVE API CONFIGURATION
# ============================================================================
# Path to Google Drive API client secret JSON file
CLIENT_SECRET_FILE=dl_src_gdrive/config/client_secret.json

# Path to store OAuth2 token file
TOKEN_FILE=dl_src_gdrive/config/token.json

# Google Drive folders to search (comma-separated list)
# Use "root" for root directory, or specific folder IDs
SEARCH_FOLDERS=root

# File extensions to download (comma-separated lists)
ALLOWED_AUDIO_EXTENSIONS=.mp3,.m4a,.wav,.ogg,.flac,.aac,.wma
ALLOWED_TEXT_EXTENSIONS=.txt,.docx,.pdf
ALLOWED_OTHER_EXTENSIONS=

# Delete files from Google Drive after successful download (true/false)
DELETE_AUDIO_FROM_SRC=false
DELETE_TEXT_FROM_SRC=false
DELETE_OTHER_FROM_SRC=false

# Legacy setting - applies to all file types if set (true/false)
# DELETE_FROM_SRC=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diary_pj_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=prefer
DB_CONNECT_TIMEOUT=10

# ============================================================================
# OPENAI API CONFIGURATION
# ============================================================================
# OpenAI API key for transcription services
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log levels for console and file output
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_CONSOLE_LEVEL=DEBUG
LOG_FILE_LEVEL=INFO

# Enable/disable console and file logging (true/false)
LOG_CONSOLE_OUTPUT=true
LOG_FILE_OUTPUT=true

# ============================================================================
# TRANSCRIPTION CONFIGURATION
# ============================================================================
# OpenAI models for transcription
# Main model for transcription (higher accuracy)
OPENAI_MAIN_MODEL=gpt-4o-transcribe

# Detection model for language detection (cheaper/faster)
OPENAI_DETECT_MODEL=gpt-4o-mini-transcribe

# Transcription settings
TRANSCRIPTION_TEMPERATURE=0.0
TRANSCRIPTION_PROBE_SECONDS=25
TRANSCRIPTION_LANGUAGE_ROUTING=false

# ============================================================================
# PIPELINE ORCHESTRATOR CONFIGURATION
# ============================================================================
# Watch mode settings (for continuous monitoring)
WATCH_INTERVAL_SECONDS=30
WATCH_MAX_RETRIES=3

# Dry run mode (preview without execution)
DRY_RUN=false

# Batch processing settings
BATCH_SIZE=10
BATCH_DELAY_SECONDS=1

# ============================================================================
# DEVELOPMENT/DEBUGGING CONFIGURATION
# ============================================================================
# Enable debug mode for verbose output
DEBUG=false

# Enable dry run mode (preview operations without execution)
DRY_RUN=false

# Enable watch mode (continuous monitoring for new files)
WATCH_MODE=false

# ============================================================================
# NOTES
# ============================================================================
# 1. All paths should use forward slashes (/) for cross-platform compatibility
# 2. Boolean values can be: true, false, 1, 0, yes, no, on, off (case insensitive)
# 3. Comma-separated lists should not have spaces around commas
# 4. Empty values will use hardcoded defaults
# 5. Comments start with # and are ignored
# ============================================================================
